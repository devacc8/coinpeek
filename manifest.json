{
  "name": "CoinPeek - Bitcoin Price Badge & Gas Tracker",
  "version": "1.1.1",
  "description": "Real-time BTC & ETH prices on badge, gas fees, and converter. Fast & lightweight.",
  "manifest_version": 3,
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "CoinPeek - Bitcoin Price Badge & Gas Tracker"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png", 
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background-simple.js"
  },
  "permissions": [
    "storage",
    "alarms"
  ],
  "host_permissions": [
    "https://api.coingecko.com/*",
    "https://api.blocknative.com/*",
    "https://api.coincap.io/*",
    "https://mempool.space/*",
    "https://api.blockchain.info/*",
    "https://api.blockchair.com/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}